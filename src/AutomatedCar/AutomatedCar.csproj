<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Assets\**;Resources\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="Assets\oval.csv" />
    <AvaloniaResource Remove="Assets\oval.json" />
    <AvaloniaResource Remove="assets\path\car.json" />
    <AvaloniaResource Remove="Assets\Path\oval.car.json" />
    <AvaloniaResource Remove="assets\path\ped.json" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="Assets\Path\car.json" />
    <EmbeddedResource Remove="Assets\Path\ped.json" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Assets\oval.csv" />
    <None Remove="Assets\oval.json" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Assets\Path\car.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Path\ped.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.2.4" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="11.2.4" />
    <PackageReference Include="Avalonia.Desktop" Version="11.2.4" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.2.4" />
    <PackageReference Include="Markdown.Avalonia" Version="11.0.2" />
    <PackageReference Include="Microsoft.CodeCoverage" Version="17.13.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="GeoLibrary" Version="1.3.0" />
    <PackageReference Include="System.Drawing.Common" Version="9.0.2" />
    <!-- <PackageReference Include="reactiveui" Version="13.2.2" /> -->
    <!-- <PackageReference Include="Splat" Version="10.0.1" /> -->
  </ItemGroup>
  <ItemGroup>
    <RuntimeHostConfigurationOption Include="System.Drawing.EnableUnixSupport" Value="true" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Assets\Path\*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
